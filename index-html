<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Counting Fruits Adventure</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Fredoka+One&family=Quicksand:wght@500;700&display=swap');
    
    body {
      font-family: 'Quicksand', sans-serif;
      touch-action: manipulation;
    }
    .font-kids { font-family: 'Fredoka One', cursive; }
    
    .fruit-pop {
      animation: pop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
    }
    
    @keyframes pop {
      0% { transform: scale(0); }
      100% { transform: scale(1); }
    }

    .bounce-loop {
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
  </style>
</head>
<body class="bg-gradient-to-b from-sky-300 to-sky-100 min-h-screen">

<div id="app" class="w-full max-w-2xl mx-auto min-h-screen flex flex-col"></div>

<script>
  const app = document.getElementById("app");

  let gameState = "start"; // start, play, feedback, summary
  let targetCount = 0;
  let options = [];
  let score = 0;
  let round = 1;
  const totalRounds = 5;
  let isCorrect = null;
  let currentFruit = "üçé";
  let selectedNum = null;

  const fruits = [
    { icon: "üçé", name: "Apples" },
    { icon: "üçå", name: "Bananas" },
    { icon: "üçä", name: "Oranges" },
    { icon: "üçì", name: "Strawberries" },
    { icon: "üçá", name: "Grapes" },
    { icon: "üçç", name: "Pineapples" },
    { icon: "üçâ", name: "Watermelons" },
    { icon: "üçê", name: "Pears" },
    { icon: "üçí", name: "Cherries" },
    { icon: "ü•ù", name: "Kiwis" }
  ];

  function generateLevel() {
    // Increase difficulty slightly as rounds progress
    const maxRange = round <= 2 ? 5 : 10;
    targetCount = Math.floor(Math.random() * maxRange) + 1;
    const fruitObj = fruits[Math.floor(Math.random() * fruits.length)];
    currentFruit = fruitObj.icon;

    const set = new Set([targetCount]);
    while (set.size < 4) {
      const wrong = Math.floor(Math.random() * maxRange) + 1;
      set.add(wrong);
    }
    options = Array.from(set).sort((a,b) => a - b);

    isCorrect = null;
    selectedNum = null;
    gameState = "play";
    render();
  }

  function handleAnswer(num) {
    selectedNum = num;
    if (num === targetCount) {
      isCorrect = true;
      score++;
      confetti({
        particleCount: 50,
        spread: 70,
        origin: { y: 0.6 },
        colors: ['#FFD700', '#FFA500', '#FF4500']
      });
    } else {
      isCorrect = false;
    }
    gameState = "feedback";
    render();
  }

  function nextStep() {
    if (round < totalRounds) {
      round++;
      generateLevel();
    } else {
      gameState = "summary";
      render();
    }
  }

  function resetGame() {
    score = 0;
    round = 1;
    generateLevel();
  }

  function render() {
    if (gameState === "start") {
      app.innerHTML = `
      <div class="flex-1 flex flex-col items-center justify-center p-6 text-center">
        <div class="bg-white p-10 rounded-[3rem] shadow-2xl border-b-[12px] border-orange-200 w-full max-w-sm">
          <div class="text-9xl mb-8 bounce-loop">üçé</div>
          <h1 class="text-5xl font-kids text-orange-500 mb-2 leading-tight">Fruit<br>Counter!</h1>
          <p class="text-gray-500 font-bold mb-10 text-xl">Let's learn numbers!</p>
          <button onclick="generateLevel()"
            class="w-full bg-green-500 hover:bg-green-600 active:scale-95 transition-all text-white text-3xl font-kids py-6 rounded-3xl shadow-[0_8px_0_rgb(22,163,74)] flex items-center gap-4 justify-center">
            PLAY!
          </button>
        </div>
      </div>`;
      return;
    }

    if (gameState === "summary") {
      const percentage = (score / totalRounds) * 100;
      let message = "Keep practicing! üåà";
      if (percentage === 100) message = "Perfect Score! üåü";
      else if (percentage >= 60) message = "Awesome Job! üéà";

      app.innerHTML = `
      <div class="flex-1 flex flex-col items-center justify-center p-6 text-center">
        <div class="bg-white p-10 rounded-[3rem] shadow-2xl border-b-[12px] border-sky-200 w-full max-w-sm">
          <h1 class="text-4xl font-kids text-sky-600 mb-6">Game Over!</h1>
          <div class="text-7xl mb-4 font-kids text-orange-500">${score} / ${totalRounds}</div>
          <p class="text-2xl font-bold text-gray-600 mb-10">${message}</p>
          
          <button onclick="resetGame()"
            class="w-full bg-orange-500 hover:bg-orange-600 active:scale-95 transition-all text-white text-3xl font-kids py-6 rounded-3xl shadow-[0_8px_0_rgb(234,88,12)] flex items-center gap-4 justify-center mb-4">
            PLAY AGAIN
          </button>
        </div>
      </div>`;
      
      if (percentage >= 80) {
        setTimeout(() => {
          confetti({ particleCount: 150, spread: 100, origin: { y: 0.6 } });
        }, 300);
      }
      return;
    }

    app.innerHTML = `
    <div class="flex-1 flex flex-col items-center p-6">
      <!-- Progress Bar -->
      <div class="w-full max-w-md mb-8">
        <div class="flex justify-between items-end mb-2">
           <span class="font-kids text-sky-700">Level ${round}/${totalRounds}</span>
           <span class="font-kids text-orange-500">Stars: ${score} ‚≠ê</span>
        </div>
        <div class="h-4 bg-white/50 rounded-full overflow-hidden border-2 border-white">
          <div class="h-full bg-orange-400 transition-all duration-500" style="width: ${(round/totalRounds)*100}%"></div>
        </div>
      </div>

      <div class="bg-white w-full max-w-md rounded-[3rem] shadow-2xl p-8 border-b-[10px] border-gray-100 flex flex-col flex-1 max-h-[700px]">
        <!-- Fruits Display -->
        <div class="bg-yellow-50 rounded-[2rem] p-6 mb-6 flex flex-wrap justify-center items-center gap-4 flex-1 overflow-auto content-center">
          ${Array.from({length: targetCount}).map((_, i)=>`
            <span class="text-6xl md:text-7xl fruit-pop" style="animation-delay: ${i * 0.1}s">
              ${currentFruit}
            </span>
          `).join("")}
        </div>

        ${
          gameState === "play"
          ? `
          <h2 class="text-2xl font-kids mb-6 text-center text-sky-800">
            How many ${currentFruit}s?
          </h2>
          <div class="grid grid-cols-2 gap-4">
            ${options.map(n=>`
              <button onclick="handleAnswer(${n})"
                class="bg-white border-4 border-sky-100 hover:border-sky-400 active:scale-90 transition-all text-5xl font-kids py-6 rounded-3xl text-sky-600 shadow-sm">
                ${n}
              </button>
            `).join("")}
          </div>
          `
          : `
          <div class="text-center py-4">
            ${
              isCorrect
              ? `
                <div class="text-6xl mb-4">‚ú® ü•≥ ‚ú®</div>
                <h2 class="text-4xl font-kids text-green-500 mb-6">
                  YES! IT'S ${targetCount}!
                </h2>
              `
              : `
                <div class="text-6xl mb-4">ü§´</div>
                <h2 class="text-3xl font-kids text-red-400 mb-2">
                  NOT QUITE!
                </h2>
                <p class="text-xl font-bold text-gray-500 mb-6">
                  That was ${selectedNum}, <br>but there are <span class="text-orange-500 text-2xl font-kids">${targetCount}</span>!
                </p>
              `
            }
            <button onclick="nextStep()"
              class="w-full bg-sky-500 hover:bg-sky-600 active:scale-95 transition-all text-white font-kids py-6 rounded-3xl text-3xl shadow-[0_8px_0_rgb(14,165,233)]">
              ${round < totalRounds ? 'NEXT' : 'RESULTS'}
            </button>
          </div>
          `
        }
      </div>

      <button onclick="gameState='start'; render();" class="mt-6 text-sky-700 font-bold flex items-center gap-2 opacity-60 hover:opacity-100">
        <i data-lucide="home"></i> Home
      </button>
    </div>
    `;
    lucide.createIcons();
  }

  render();
</script>

</body>
</html>

